"use client";

import React from "react";
import { Ban, AlertTriangle } from "lucide-react";
import { Button } from "@/components/ui/button";
import useAppLevelAuth from "@/hooks/useAppLevelAuth";
import { useRouter } from "next/navigation";
import { createPageUrl } from "@/utils";

export default function BannedScreen() {
  const { logout } = useAppLevelAuth();
  const router = useRouter();

  const handleLogout = async () => {
    await logout();
    router.push(createPageUrl("login"));
  };

  return (
    <div className="min-h-screen bg-neutral-950 flex items-center justify-center p-4">
      <div className="max-w-md w-full text-center">
        <div className="mb-8">
          <div className="inline-flex items-center justify-center w-20 h-20 rounded-full bg-red-950 border-2 border-red-500 mb-6">
            <Ban className="h-10 w-10 text-red-500" />
          </div>
          <h1 className="text-3xl font-bold text-neutral-50 mb-3">Account Banned</h1>
          <div className="bg-red-950/50 border border-red-900 rounded-lg p-4 mb-6">
            <div className="flex items-start gap-3">
              <AlertTriangle className="h-5 w-5 text-red-500 flex-shrink-0 mt-0.5" />
              <div className="text-left">
                <p className="text-red-200 text-sm font-semibold mb-2">Your account has been banned</p>
                <p className="text-red-300 text-sm">
                  This account has been permanently banned from Textaway due to violations of our community guidelines or terms of service.
                </p>
              </div>
            </div>
          </div>
          <p className="text-neutral-400 text-sm mb-6">
            If you believe this is a mistake, please contact our support team for assistance.
          </p>
        </div>
        <div className="space-y-3">
          <Button
            onClick={handleLogout}
            className="w-full bg-neutral-800 text-neutral-50 hover:bg-neutral-700"
          >
            Sign Out
          </Button>
          <p className="text-xs text-neutral-500">
            Need help? Contact support@textaway.com
          </p>
        </div>
      </div>
    </div>
  );
}
